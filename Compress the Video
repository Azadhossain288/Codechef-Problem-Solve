#include<stdio.h>
int main()
{
    int t;
    scanf("%d",&t);
    while(t--)
    {
        int n,i;
        scanf("%d",&n);
        int A[n];
        int count=0;
        for(i=0;i<n;i++)
        {
            scanf("%d",&A[i]);
        }
        for(i=0;i<n;i++)
        {
            if(A[i]!=A[i+1])
                count++;
        }
        printf("%d\n",count);
    }
    return 0;
}
